
<div class="blog-index">
	<article role="article">
		<header>
			<h1 class="entry-title">Archive:<%= @archive %></h1>
		</header>
	</article>

	<% @posts.each do |post| %>
  	<article>
		<header>
			<h1 class="entry-title">
				<%= link_to post.title, post %>
			</h1>
			<p class="meta">
				<time datetime="2013-05-18T17:37:00+08:00" pubdate="" data-updated="true">
					<span class="month"><%= post.created_at.strftime("%b")%></span> 
					<span class="day"><%= post.created_at.strftime("%d,")%></span> 
					<span class="year"><%= post.created_at.strftime("%Y")%></span>
				</time>
   	 		</p>
	 	</header>
	 	<div class="entry-content">
			<p><%= post.content.html_safe %></p>
	 	</div>
  		<footer>
			<a rel="full-article" <%= link_to "更多 →", post %></a>
  		</footer>
	</article>
	<% end %>
</div>
