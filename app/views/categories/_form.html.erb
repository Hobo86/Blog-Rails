<%= form.fields_for :categories do |category_form| %>
  <div class="field">
    <%= category_form.label :name, 'Category:' %>
    <%= category_form.text_field :name %>
  </div>
  <% unless category_form.object.nil? || category_form.object.new_record? %>
    <div class="field">
      <%= category_form.label :_destroy, 'Remove:' %>
      <%= category_form.check_box :_destroy %>
    </div>
  <% end %>
<% end %>