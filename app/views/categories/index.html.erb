
<div>
	<article role="article">
		<header>
			<h1 class="entry-title">Blog Category</h1>
		</header>
		<div id="blog-archives">
			<% @categories.each do |category| %>
				<h2><%= category.name%></h2>
				<% category.posts.each do |post|%>
					<article>
						<h1>
							<%= link_to post.title, post %>
						</h1>
						<time datetime="<%= post.created_at%>" pubdate="">
							<span class="month"><%= post.created_at.strftime("%b")%></span> 
							<span class="day"><%= post.created_at.strftime("%d")%></span> 
							<span class="year"><%= post.created_at.strftime("%Y")%></span>
						</time>
						<footer>
				  			<span class="categories">posted in 
								<a class="category" ><%= link_to post.category.name, post.category %></a>
							</span>
						</footer>
					</article>
				<% end %>
			<% end %>
		</div>
	</article>
</div>




