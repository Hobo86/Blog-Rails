
<div>
  <article role="hentry" role="article">
    <header>
      <h1 class="entry-title">
        <%= @post.title %>
      </h1>
      <p class="meta">
        <time datetime="2013-06-23T12:39:00+08:00" pubdate="" data-updated="true">Jun 23<span>rd</span>, 2013
        </time>
      </p>
    </header>

    <div class="entry-content">
      <p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Category:</b>
  <%= @post.category.name %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<h2>Comments</h2>
<%= render @post.comments %>


<br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
    </div>
  </article>
</div>



