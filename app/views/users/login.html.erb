
<div  class="blog-index">
	<h1>Login</h1>
  <%= form_tag('/users/verify') do -%>
    <div>
      <%= text_field_tag 'nickname', nil, placeholder: '昵称' %><br>
      <%= password_field_tag 'password', nil, placeholder: '密码' %><br>
      <%= submit_tag '登录' %>
      <%= link_to '注册', '/users/register' %>
    </div>
  <% end -%>
</div>